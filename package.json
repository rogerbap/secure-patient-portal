{
  "name": "secure-patient-portal",
  "version": "1.0.0",
  "description": "Secure Patient Portal with Risk Assessment - Healthcare Security Demo",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/server.js",
    "dev:client": "live-server client --port=8080 --cors",
    "build": "echo 'Build completed'",
    "postinstall": "npm run db:setup",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "db:reset": "node scripts/reset-database.js",
    "db:setup": "node -e \"const fs = require('fs'); try { fs.mkdirSync('./database', {recursive: true}); fs.mkdirSync('./logs', {recursive: true}); console.log('✅ Directories ready'); } catch(e) { console.log('✅ Directories exist'); }\"",
    "lint": "eslint server/ client/assets/js/",
    "lint:fix": "eslint server/ client/assets/js/ --fix",
    "install:all": "npm install && echo 'Dependencies installed successfully'",
    "setup": "npm run db:setup && npm run install:all"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-session-sequelize": "^7.1.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "geoip-lite": "^1.4.7",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "useragent": "^2.3.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "healthcare",
    "security",
    "patient-portal",
    "risk-assessment",
    "hipaa",
    "authentication",
    "audit-logging"
  ],
  "author": "Healthcare Security Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rogerbap/secure-patient-portal.git"
  },
  "bugs": {
    "url": "https://github.com/rogerbap/secure-patient-portal"
  },
  "homepage": "https://github.com/rogerbap/secure-patient-portal#readme"
}
